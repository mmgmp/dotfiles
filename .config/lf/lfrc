# Ajustes básicos
set hidden true
set ignorecase true
set icons true
set drawbox true
set sixel true
set previewer ~/.config/lf/previewer.sh
set cursorpreviewfmt "\033[7m"

# Quitar teclas predeterminadas
map m
map n
map r

# Renombrar
map A :rename; cmd-end
map I :rename; cmd-home

# Movimiento
map gd cd ~/Descargas/
map gD cd ~/Documentos/
map gi cd ~/Imágenes/
map gm cd ~/Música/
map gv cd ~/Vídeos/

map gs cd ~/.local/bin/
map gr cd ~/Documentos/GitHub/

# Configuración de teclas
map md mkdir
map mf mkfile
map S symbolic
map rr trash-put
map R trash-empty
map E extract
map bg background
map N copy-name
map P copy-path
map +x ch-x1

# Crear carpeta
cmd mkdir %printf " Nombre del directorio: "; read ans; mkdir "$ans"; printf " "

# Crear archivo
cmd mkfile %printf " Nombre del archivo: "; read ans; touch "$ans"; printf " "

# Crear link simbólico
cmd symbolic %current_path=$(pwd); name=$(basename "$f"); ln -s "$f" $current_path/Enlace_a_$name

# Mover a la papelera
cmd trash-put %trash-put -- $fx

# Vaciar papelera
cmd trash-empty %printf "¿Quieres vaciar la papelera? (*): "; read ans; [ "$ans" = "*" ] && trash-empty; printf " "

# Descomprimir
cmd extract ${{
	clear
	case "$f" in
		*.zip) unzip "$f" ;;
		*.tar*) tar -xvf "$f" ;;
		*.rar) unrar x "$f" ;;
		*.7z) 7zz x "$f" ;;
		*) printf "Formato no soportado" ;;
	esac
}}

# Cambiar fondo en sway
cmd background %printf "output * bg "$f" fill" > ~/.config/sway/wallpaper; sway reload; printf " "

# Abrir archivos
cmd open ${{
	case $(file --mime-type -Lb "$f") in
		text/*) $EDITOR "$f" ;;
		image/*) swayimg "$f" ;;
		*/pdf) zathura "$f" & ;;
		*) xdg-open "$f" & ;;
	esac
}}

# Copiar nombre del archivo
cmd copy-name ${{
	basename "$f" | wl-copy
}}

# Copiar ruta del archivo
cmd copy-path ${{
	wl-copy "$f"
}}

# Hacer ejecutable
cmd ch-x1 ${{
	chmod +x $fx
}}
